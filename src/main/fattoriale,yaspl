def fattoriale(in int i, out int f){
while(i>0) do{
	f = f * i;
	i = i - 1;
}
f + "\n" ->;
}

int i,f=0,app;
bool lettura = false;

start

while(not lettura)do{
	"Inserisci un numero intero positivo :"->;
	i <-;
	app = i;
	if(app > 0) then{
		lettura = true;
	}
	else {
		lettura = false;	
	}
}


fattoriale(i,f);
